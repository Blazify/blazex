{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'blazescript'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=blazescript",
                    "--package=blazescript",
                ],
                "filter": {
                    "name": "blazescript",
                    "kind": "bin"
                }
            },
            "args": ["examples/main.bzs", "bytecode"],
            "cwd": "${workspaceFolder}"
        }
    ]
}