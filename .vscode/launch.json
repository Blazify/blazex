{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Compile",
      "cargo": {
        "args": ["build", "--bin=blazescript", "--package=blazescript"],
        "filter": {
          "name": "blazescript",
          "kind": "bin"
        }
      },
      "args": ["examples/main.bzs"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Interpret",
      "cargo": {
        "args": ["build", "--bin=blazescript", "--package=blazescript"],
        "filter": {
          "name": "blazescript",
          "kind": "bin"
        }
      },
      "args": ["examples/main.bze"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
